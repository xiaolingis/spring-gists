<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="travelTables" targetRuntime="MyBatis3">
        <!-- 生成文件编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- formatter -->
        <property name="xmlFormatter" value="generator.formatter.MyXmlFormatter"/>
        <!-- 自动识别数据库关键字 -->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 生成的模型实现 toString -->
        <plugin type="generator.plugins.MyToStringPlugin"/>
        <!-- 生成的模型实现可序列化 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- 更改默认配置 -->
        <plugin type="generator.plugins.FalseMethodPlugin"/>
        <!-- 覆盖 XML 文件 -->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>
        <!-- 添加 @Mapper 注解-->
        <plugin type="org.mybatis.generator.plugins.MapperAnnotationPlugin"/>

        <!-- 生成注解 -->
        <commentGenerator type="generator.comment.RemarksCommentGenerator">
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/database"
                        userId="root"
                        password="root">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="com.bz.project.domain"
                            targetProject="generated-sources">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成的映射文件包名和位置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="generated-sources/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成 DAO 的包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.bz.project.dao"
                             targetProject="generated-sources">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 数据库表 -->
        <table tableName="t_user" domainObjectName="User">
            <generatedKey column="id" sqlStatement="JDBC"/>
            <!-- 不单独处理 BLOB 字段 -->
            <!--<columnOverride column="data" jdbcType="VARCHAR"/>-->
        </table>
    </context>

</generatorConfiguration>